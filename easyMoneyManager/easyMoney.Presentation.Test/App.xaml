<Application x:Class="easyMoney.Presentation.Test.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="AccountEditWindow.xaml">
    <Application.Resources>
        <BitmapImage x:Key="easyMoneyIcon" UriSource="file:///D:/Projects/PersonalEasy/easyMoney/easyMoneyManager/easyMoney.Presentation.Test/easyMoney.ico" />
        
        <Style x:Key="StandardControlStyle">
            <Setter Property="Control.Margin" Value="4" />
            <Setter Property="Control.Height" Value="Auto" />
            <Setter Property="Control.Width" Value="Auto" />
            <Setter Property="Control.VerticalAlignment" Value="Stretch" />
            <Setter Property="Control.HorizontalAlignment" Value="Stretch" />
        </Style>
        <Style x:Key="StandardButtonStyle" BasedOn="{StaticResource StandardControlStyle}">
            <Setter Property="Control.MinWidth" Value="85" />
            <Setter Property="Control.MinHeight" Value="24" />
        </Style>
        <Style x:Key="TopLabelStyle" BasedOn="{StaticResource StandardControlStyle}">
            <Setter Property="Control.Padding" Value="0" />
            <Setter Property="Control.Margin" Value="4 4 4 0" />
            <Setter Property="Control.VerticalAlignment" Value="Bottom" />
            <Setter Property="Control.VerticalContentAlignment" Value="Bottom" />
        </Style>
        <Style x:Key="BottomLabelStyle" BasedOn="{StaticResource StandardControlStyle}">
            <Setter Property="Control.Padding" Value="0" />
            <Setter Property="Control.Margin" Value="4 0 4 4" />
            <Setter Property="Control.VerticalAlignment" Value="Top" />
            <Setter Property="Control.VerticalContentAlignment" Value="Top" />
        </Style>
    </Application.Resources>
</Application>
